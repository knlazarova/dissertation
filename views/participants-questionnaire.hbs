<div ng-app="myApp" ng-controller="questionnaireCtrl">
<div style="margin-top:1%;">

</div>
<p> Please fill in the following form </p> 
</br>
   
   <form>
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input ng-model="email" type="email" class="form-control" id="email" aria-describedby="emailHelp" required>
    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group" >
    <label for="name">Name</label>
    <input type="name" ng-model="name" class="form-control" id="name" required>
  </div>
    <div class="form-group">
    <label for="age">Age</label>
    <input ng-model="age" type="number" class="form-control" id="age" required>
  </div>
    <div class="form-group">
    <label for="degree">University Degree</label>
    <input class="form-control" ng-model="uniDegree" id="uniDegree" required>
  </div>
  <button ng-click="submitQuestionnaire()" type="submit" class="btn btn-default navbar-btn" style="background-color:#E6FFE6; background-image: none">Submit</button>
</form>
</div>
</div>
<script src="js/questionnaire_controller.js"></script> 